<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/textAnalysisInfo"
        android:text="@string/textAnalysisInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/buttonMeasureXRay"
        android:text="@string/buttonMeasureXRay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textAnalysisInfo"
        android:onClick="eventMeasureXRay"
        />

    <ImageView
        android:id="@+id/imgArea"
        android:src="@drawable/empty_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonMeasureXRay"
        />

</RelativeLayout>
